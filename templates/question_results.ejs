<!DOCTYPE html>
<head>
    <title> Welcome to <%= appName %> </title>
    <link rel="stylesheet" type="text/css" href="/main.css">
    <script src='/cultural_learning.js' type="text/javascript"></script>
</head>
<header>
    <a href="/home">
        <img src="/manners_logo.png" alt="Web Application Logo">
    </a>
</header>
<body>
    <!-- displaying users' first name -->
    <!-- iterating over the username field (retrieved from the database) to display on page -->
    <% usersName.forEach(function(user) { %>
        <!-- displaying users first name solely -->
        <!-- displaying user score  -->
        <p id="usersName"><%= user.first_name %>, you've scored <span id="user_score"></span> out of 5!</p>
    <% }) %>
    <!-- displaying a result message based on performance  -->
    <div id="result_message"></div>

    <!-- displaying buttons available to users -->
    <div id="result_btns">
        <!-- retry the questions -->
        <button id="retry" type="button" onclick="retryQuestions()">Retry</button>
        <p id="option">or</p>
        <!-- go back to the home page -->
        <button id="return_home" type="button" onclick="window.location.href = './home'">Home</button>
    </div>
</body>
<script>
    // calling the functions from cultural_learning.js once the window has loaded
    window.onload = function() {
        displayScore(),
        retryQuestions();
    };
</script>

</html>